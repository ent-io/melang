sqlite: &sqlite
  adapter: sqlite3

mysql: &mysql
  adapter: mysql2
  username: root
  password:

postgresql: &postgresql
  adapter: postgresql
  username: postgres
  password:
  min_messages: ERROR

defaults: &defaults
  pool: 5
  timeout: 5000
  host: localhost
  <<: *<%= ENV['DB'] || "sqlite" %>

development:
  database: db/development.sqlite3
  <<: *defaults

test:
  database: db/test.sqlite3
  <<: *defaults

production:
  database: db/production.sqlite3
  <<: *defaults
